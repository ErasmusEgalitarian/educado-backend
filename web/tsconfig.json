{
  "compilerOptions": {
    "target": "ES2023",
    "useDefineForClassFields": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["jest", "cypress", "vite/client"],
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Paths */
    "baseUrl": "./",
    "paths": {
      "@/shared/*": ["src/shared/*"],
      "@/auth/*": ["src/features/auth/*"],
      "@/certificates/*": ["src/features/certificates/*"],
      "@/course/*": ["src/features/course/*"],
      "@/exercise/*": ["src/features/exercise/*"],
      "@/lecture/*": ["src/features/lecture/*"],
      "@/section/*": ["src/features/section/*"],
      "@/user/*": ["src/features/user/*"],
      "@/unplaced/*": ["src/unplaced/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "__tests__", "cypress"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["cypress.config.ts", "cypress", "node_modules", "dist"]
}
