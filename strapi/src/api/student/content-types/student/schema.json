{
  "kind": "collectionType",
  "collectionName": "students",
  "info": {
    "singularName": "student",
    "pluralName": "students",
    "displayName": "Student"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "required": true
    },
    "biography": {
      "type": "text",
      "maxLength": 4000
    },
    "email": {
      "type": "email",
      "required": true,
      "minLength": 1,
      "maxLength": 50,
      "unique": true
    },
    "password": {
      "type": "password",
      "required": true,
      "minLength": 3
    },
    "feedbacks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::feedback.feedback",
      "mappedBy": "student"
    },
    "courses": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::course.course",
      "mappedBy": "students"
    },
    "certificates": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::certificate.certificate",
      "mappedBy": "student"
    },
    "isVerified": {
      "type": "boolean",
      "default": false
    }
  }
}
