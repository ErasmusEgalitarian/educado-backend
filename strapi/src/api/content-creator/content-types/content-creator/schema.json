{
  "kind": "collectionType",
  "collectionName": "content_creators",
  "info": {
    "singularName": "content-creator",
    "pluralName": "content-creators",
    "displayName": "Content Creator"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "password": {
      "type": "password",
      "required": false,
      "minLength": 8
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "required": true
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "required": true
    },
    "verifiedAt": {
      "type": "date"
    },
    "motivation": {
      "type": "string"
    },
    "statusValue": {
      "type": "enumeration",
      "required": true,
      "default": "PENDING",
      "enum": [
        "PENDING",
        "APPROVED",
        "REJECTED"
      ]
    },
    "currentCompany": {
      "type": "string",
      "minLength": 1,
      "maxLength": 40,
      "required": true
    },
    "jobs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::job.job"
    },
    "educations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::education.education"
    },
    "user_logs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::user-log.user-log"
    },
    "courses": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::course.course",
      "inversedBy": "content_creators"
    },
    "dashboard_activities": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::dashboard-activity.dashboard-activity",
      "mappedBy": "content_creator"
    },
    "isAdmin": {
      "type": "boolean",
      "default": false
    },
    "rejectionReason": {
      "type": "string",
      "maxLength": 100
    },
    "profilePicture": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}
