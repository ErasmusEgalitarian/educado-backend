{
  "kind": "collectionType",
  "collectionName": "content_creators",
  "info": {
    "singularName": "content-creator",
    "pluralName": "content-creators",
    "displayName": "Content Creator"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "email": {
      "type": "email",
      "required": true,
      "minLength": 1,
      "maxLength": 100,
      "unique": true
    },
    "password": {
      "type": "password",
      "required": true,
      "minLength": 4
    },
    "person": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::person.person"
    },
    "courses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course.course",
      "mappedBy": "content_creator"
    }
  }
}
