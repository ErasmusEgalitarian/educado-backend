{
  "paths": {
    "/content-creator/register": {
      "post": {
        "tags": ["Content Creator - Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignupRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JWTContentCreatorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SignupRequest": {
        "type": "object",
        "required": [
          "firstName",
          "lastName",
          "email",
          "password",
          "motivation",
          "jobs",
          "educations"
        ],
        "properties": {
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          },
          "motivation": {
            "type": "string"
          },
          "jobs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "company",
                "title",
                "startDate",
                "endDate",
                "description"
              ],
              "properties": {
                "company": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "startDate": {
                  "type": "string"
                },
                "endDate": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          },
          "educations": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "educationType",
                "isInProgress",
                "course",
                "institution",
                "startDate",
                "endDate"
              ],
              "properties": {
                "educationType": {
                  "type": "string"
                },
                "isInProgress": {
                  "type": "boolean"
                },
                "course": {
                  "type": "string"
                },
                "institution": {
                  "type": "string"
                },
                "startDate": {
                  "type": "string"
                },
                "endDate": {
                  "type": "string"
                }
              }
            }
          }
        }
      },

      "JWTContentCreatorResponse": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string"
          },
          "userInfo": {
            "type": "object",
            "properties": {
              "documentId": {
                "type": "string"
              },
              "firstName": {
                "type": "string"
              },
              "lastName": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "verifiedAt": {
                "type": "string",
                "format": "date"
              }
            }
          }
        }
      }
    }
  }
}