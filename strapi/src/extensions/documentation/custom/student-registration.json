{
  "paths": {
    "/student/signup": {
      "post": {
        "tags": [
          "Student - Auth"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignupRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JWTResponse"
                }
              }
            }
          }
        }
      }
    },
    "/student/send-verification-token": {
      "post": {
        "tags": [
          "Student - Auth"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StudentVerificationTokenRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OKResponse"
                }
              }
            }
          }
        }
      }
    },
    "/student/verify-email": {
      "post": {
        "tags": [
          "Student - Auth"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VerifyEmailRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JWTResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SignupRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "JWTResponse": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string"
          },
          "userInfo": {
            "type": "object",
            "properties": {
              "documentId": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "verifiedAt": {
                "type": "string",
                "format": "date"
              }
            }
          }
        }
      },
      "OKResponse": {
        "type": "string"
      },
      "StudentVerificationTokenRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          }
        }
      },
      "VerifyEmailRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "tokenCode": {
            "type": "string"
          }
        }
      }
    }
  }
}