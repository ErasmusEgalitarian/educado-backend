{
  "paths": {
    "/courses/{courseId}/sections": {
      "get": {
        "tags": ["Course Sections"],
        "summary": "Get all sections for a course",
        "description": "Retrieve all sections belonging to a specific course. Requires student authentication.",
        "parameters": [
          {
            "name": "courseId",
            "in": "path",
            "required": true,
            "description": "The ID of the course",
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved course sections",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CourseSectionListResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - Authentication required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Course not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Course Sections"],
        "summary": "Create a new section for a course",
        "description": "Create a new section within a specific course. Requires content creator authentication and course ownership.",
        "parameters": [
          {
            "name": "courseId",
            "in": "path",
            "required": true,
            "description": "The ID of the course",
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCourseSectionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Section created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CourseSectionResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - Content creator authentication required or course ownership required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Course not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/courses/{courseId}/sections/{id}": {
      "get": {
        "tags": ["Course Sections"],
        "summary": "Get a specific section from a course",
        "description": "Retrieve a specific section by ID from a specific course. Requires student authentication.",
        "parameters": [
          {
            "name": "courseId",
            "in": "path",
            "required": true,
            "description": "The ID of the course",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The ID of the section",
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved course section",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CourseSectionResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - Authentication required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Course or section not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Course Sections"],
        "summary": "Update a section in a course",
        "description": "Update an existing section within a specific course. Requires content creator authentication and course ownership.",
        "parameters": [
          {
            "name": "courseId",
            "in": "path",
            "required": true,
            "description": "The ID of the course",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The ID of the section",
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateCourseSectionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Section updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CourseSectionResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - Content creator authentication required or course ownership required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Course or section not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Course Sections"],
        "summary": "Delete a section from a course",
        "description": "Delete an existing section from a specific course. Requires content creator authentication and course ownership.",
        "parameters": [
          {
            "name": "courseId",
            "in": "path",
            "required": true,
            "description": "The ID of the course",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The ID of the section",
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Section deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CourseSectionResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - Content creator authentication required or course ownership required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Course or section not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "CourseSection": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "documentId": {
            "type": "string"
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "description": {
            "type": "string",
            "maxLength": 400
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "publishedAt": {
            "type": "string",
            "format": "date-time"
          },
          "course": {
            "$ref": "#/components/schemas/CourseReference"
          },
          "exercises": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ExerciseReference"
            }
          },
          "lectures": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LectureReference"
            }
          }
        }
      },
      "CourseReference": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "documentId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          }
        }
      },
      "ExerciseReference": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "documentId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          }
        }
      },
      "LectureReference": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "documentId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          }
        }
      },
      "CreateCourseSectionRequest": {
        "type": "object",
        "required": ["data"],
        "properties": {
          "data": {
            "type": "object",
            "required": ["title"],
            "properties": {
              "title": {
                "type": "string",
                "minLength": 1,
                "maxLength": 50,
                "description": "Title of the section"
              },
              "description": {
                "type": "string",
                "maxLength": 400,
                "description": "Description of the section"
              }
            }
          }
        }
      },
      "UpdateCourseSectionRequest": {
        "type": "object",
        "required": ["data"],
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "minLength": 1,
                "maxLength": 50,
                "description": "Title of the section"
              },
              "description": {
                "type": "string",
                "maxLength": 400,
                "description": "Description of the section"
              }
            }
          }
        }
      },
      "CourseSectionResponse": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/CourseSection"
          },
          "meta": {
            "type": "object"
          }
        }
      },
      "CourseSectionListResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CourseSection"
            }
          },
          "meta": {
            "type": "object",
            "properties": {
              "pagination": {
                "type": "object"
              }
            }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "null"
          },
          "error": {
            "type": "object",
            "properties": {
              "status": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              },
              "message": {
                "type": "string"
              },
              "details": {
                "type": "object"
              }
            }
          }
        }
      }
    }
  }
}