{
  "$schema": "https://turborepo.dev/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint:check": {
      "dependsOn": [],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": [],
      "outputs": []
    },
    "format:check": {
      "dependsOn": [],
      "outputs": []
    },
    "format:fix": {
      "dependsOn": [],
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "docker": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false
    },
    "docker:build": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": false
    },
    "docker:build:tag": {
      "dependsOn": ["docker:build"],
      "outputs": [],
      "cache": false
    },
    "generate-merged-spec": {
      "dependsOn": [],
      "outputs": [
        "../openapi/strapi-spec.json",
        "public/openapi/strapi-spec.json"
      ]
    },
    "generate-merged-spec": {
      "dependsOn": [],
      "outputs": [
        "../openapi/strapi-spec.json",
        "public/openapi/strapi-spec.json"
      ]
    },
    "generate-strapi-client": {
      "dependsOn": ["^generate-merged-spec"],
      "outputs": ["src/shared/api/**"]
    },
    "generate-api": {
      "dependsOn": ["//#generate-merged-spec", "//#generate-client"],
      "outputs": []
    }
  }
}
